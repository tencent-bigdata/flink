nav.navbar.navbar-default.navbar-fixed-top.navbar-main
  #fold-button.btn.btn-default.navbar-btn.pull-left(ng-click='showSidebar()')
    i.fa.fa-navicon

  .navbar-title-job
    .container-fluid.no-padding
      .row.no-margin.no-padding
        .row
          .col-xs-12.job-name
            a(ui-sref="single-job.overview.vertices({ jobid: jobId })") {{ jobName }}
        .row
          .col-xs-12.job-id
            | {{ jobId }}
  .navbar-title-job
    .container-fluid.no-padding
      .row.no-margin.no-padding
        .row
          .col-xs-12.job-name
            a {{ name }}
        .row
          .col-xs-12.job-id
            | {{ id }}
  .navbar-info.first.last.hidden-xs.hidden-sm.label-group
    bs-label(status="{{status}}" ng-repeat="(status, value) in numTasksPerState") {{value}}

#content-inner
  .panel.panel-default.panel-multi
    nav.navbar.navbar-default.navbar-secondary-additional
      ul.nav.nav-tabs
        li(ui-sref-active='active')
          a(ui-sref=".tasks") Tasks

        li(ui-sref-active='active')
          a(ui-sref=".records") Metrics (Records)

        li(ui-sref-active='active')
          a(ui-sref=".bytes") Metrics (Bytes)

    .panel-body.clean#node-details(ui-view="details")
